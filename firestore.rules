rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /seasons/{seasonId} {
      allow read: if true;
      allow write: if false;  // Admin/script writes via firebase-admin only
    }
    match /userSessions/{deviceId} {
      allow read, write: if true;  // No auth initially
    }
  }
}
