rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Legacy path — kept for backward compatibility
    match /seasons/{seasonId} {
      allow read: if true;
      allow write: if false;
    }

    // Multi-league paths
    match /leagues/{leagueId} {
      allow read: if true;
      allow write: if false;

      match /seasons/{seasonId} {
        allow read: if true;
        allow write: if false;

        // Frame-level data subcollection (one doc per match)
        match /frames/{matchId} {
          allow read: if true;
          allow write: if false;
        }
      }
    }

    // Cross-league player search index (denormalized, read-optimized)
    match /players_index/{indexId} {
      allow read: if true;
      allow write: if false;
    }

    // User profiles - authenticated users can read/write their own
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Owner can write anything on their own doc
      allow write: if request.auth != null && request.auth.uid == userId;
      // Any authenticated user can update ONLY chalkStats (kiosk cross-user writes)
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['chalkStats']);

      // User data subcollection
      match /userData/{document} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Notification subscription subcollection
      match /notificationSubscription/{document} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Notification history subcollection
      match /notificationHistory/{document} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /userSessions/{deviceId} {
      allow read, write: if true;
    }

    // Predictions — any authenticated user can create, only owner can read their own
    match /predictions/{predictionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if false; // server-only updates for resolution
    }

    // Gamification data — read for any auth user, write only via Cloud Functions
    match /gamification/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Mini-leagues
    match /miniLeagues/{leagueId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    // Leaderboards — read-only for auth users, server writes only
    match /leaderboards/{path=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Weekly challenges — read-only for auth users, server writes only
    match /weeklyChallenges/{weekId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // ===== Chalk (Pub Pool Queue) =====

    // Chalk venues — owner-managed
    match /chalkVenues/{venueId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    // Chalk tables — open read, validated write
    match /chalkTables/{tableId} {
      allow read: if true;
      allow create: if true
        && request.resource.data.keys().hasAll(['id', 'shortCode', 'name', 'venueName', 'status', 'settings', 'queue', 'sessionStats'])
        && request.resource.data.queue is list
        && request.resource.data.queue.size() <= 30;
      allow update: if true
        && request.resource.data.queue is list
        && request.resource.data.queue.size() <= 30;
      allow delete: if resource.data.venueId == null
        || (request.auth != null
            && get(/databases/$(database)/documents/chalkVenues/$(resource.data.venueId)).data.ownerId == request.auth.uid);

      // Game history — immutable records
      match /history/{gameId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if false;
      }
    }

    // Chalk table index — short code to table ID lookup
    match /chalkTableIndex/{shortCode} {
      allow read: if true;
      allow create: if true;
      allow update: if false;
      allow delete: if true;
    }
  }
}
