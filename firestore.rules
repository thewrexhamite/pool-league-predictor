rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Legacy path â€” kept for backward compatibility
    match /seasons/{seasonId} {
      allow read: if true;
      allow write: if false;
    }

    // Multi-league paths
    match /leagues/{leagueId} {
      allow read: if true;
      allow write: if false;

      match /seasons/{seasonId} {
        allow read: if true;
        allow write: if false;
      }
    }

    match /userSessions/{deviceId} {
      allow read, write: if true;
    }
  }
}
